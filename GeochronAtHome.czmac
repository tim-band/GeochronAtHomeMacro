def current_magnification():
    return Zen.Devices.ObjectiveChanger.GetMagnificationByPosition(Zen.Devices.ObjectiveChanger.ActualPosition)

def request_magnification(mag):
    if current_magnification() != mag:
        Zen.Application.Pause('Please set the magnification to {0}x'.format(mag))

class CreateTiledImageTask(Task):
    REG_SIZE = 50
    MAGNIFICATION = 10
    def get_pois(self):
        return self.docs.get_pois(self.POI_TYPE)
    def is_available(self):
        return has_at_least(self.get_pois(), 2)
    def extra_points(self):
        return []
    def do(self):
        request_magnification(self.MAGNIFICATION)
        ps = list(self.get_pois())
        xmin = ps[0].x
        xmax = xmin
        ymin = ps[0].y
        ymax = ymin
        z = ps[0].z
        for p in ps[1:]:
            x = p.x
            if x &lt; xmin:
                xmin = x
            elif xmax &lt; x:
                xmax = x
            y = p.y
            if y &lt; ymin:
                ymin = y
            elif ymax &lt; y:
                ymax = y
            z += p.z
        w = xmax - xmin
        h = ymax - ymin
        z = z / len(ps)
        exp = Zen.Acquisition.Experiments.GetByName(self.EXPERIMENT_NAME)
        exp.ClearTileRegionsAndPositions(0)
        exp.AddRectangleTileRegion(0, xmin + w/2, ymin + h/2, w, h, z)
        for p in self.extra_points():
            exp.AddRectangleTileRegion(0, p.x, p.y, self.REG_SIZE, self.REG_SIZE, p.z)
        tiles = Zen.Acquisition.Execute(exp)
        zen.save_as(
            tiles,
            os.path.join(self.docs.folder, self.FILE_NAME),
            True
        )
        tiles.Close()
        exp.ClearTileRegionsAndPositions(0)
        zen.discard_changes(exp)

